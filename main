#!/usr/bin/env ruby

require_relative 'app'

def main
  puts "Welcome to the School Library App!\n"
  app = App.new
  app.run
end

def options(num)
  case num
  when 1
    list_all_books
  when 2
    list_all_people
  when 3
    create_person
  when 4
    create_book
  when 5
    create_rental
  end
end

def prompt_user
  puts "
        Please choose an option by entering a number from below:\n
        1 - List all books
        2 - List all people
        3 - Create a person
        4 - Create a book
        5 - Create a rental
        6 - List all rentals for a given person (id)
        7 - List all students
        8 - List all teachers
        9 - Exit"

  answer = gets.chomp.to_i
  options(answer)
  prompt_user
end

main
